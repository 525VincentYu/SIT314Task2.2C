<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:accessibilityLiveRegion="none"
    android:background="@color/quantum_pink100"
    tools:context=".MainActivity">


    <EditText
        android:id="@+id/phonenumbersignup"
        android:layout_width="350dp"
        android:layout_height="55dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="560dp"
        android:background="@drawable/textview_border"
        android:ems="10"
        android:hint="       Phone number:"
        android:inputType="textPersonName"
        android:textAlignment="viewStart"
        android:textColorHint="#020202"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/comfirmsignup"
        android:layout_width="350dp"
        android:layout_height="55dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="460dp"
        android:background="@drawable/textview_border"
        android:ems="10"
        android:hint="      Comfirm Password:"
        android:inputType="textPersonName"
        android:textAlignment="viewStart"
        android:textColorHint="#050505"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/passwordsignup"
        android:layout_width="350dp"
        android:layout_height="55dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="356dp"
        android:background="@drawable/textview_border"
        android:ems="10"
        android:hint="      Password:"
        android:inputType="textPersonName"
        android:textAlignment="viewStart"
        android:textColorHint="#040303"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/usernamesignup"
        android:layout_width="350dp"
        android:layout_height="55dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="268dp"
        android:background="@drawable/textview_border"
        android:ems="10"
        android:hint="      Username:"
        android:inputType="textPersonName"
        android:textAlignment="viewStart"
        android:textColorHint="#050505"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/fullnamesignup"
        android:layout_width="350dp"
        android:layout_height="55dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="180dp"
        android:background="@drawable/textview_border"
        android:ems="10"
        android:hint="      Full name:"
        android:inputType="textPersonName"
        android:textAlignment="viewStart"
        android:textColorHighlight="#020202"
        android:textColorHint="#020202"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/createaccount"
        android:layout_width="286dp"
        android:layout_height="56dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/button_border"
        android:text="Create account"
        android:textColor="#050202"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/phonenumbersignup" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="307dp"
        android:layout_height="114dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_baseline_photo_camera_24" />

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="71dp"
        android:layout_height="60dp"
        android:layout_marginStart="212dp"
        android:layout_marginTop="44dp"
        android:scaleType="fitXY"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView"
        app:srcCompat="@drawable/ic_baseline_add_circle_24" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="218dp"
        android:layout_height="32dp"
        android:layout_marginStart="88dp"
        android:layout_marginTop="132dp"
        android:text="Add Image"
        android:textAlignment="center"
        android:textColor="#070303"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/btnBack"
        android:layout_width="94dp"
        android:layout_height="37dp"
        android:layout_marginTop="724dp"
        android:layout_marginEnd="144dp"
        android:scaleType="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_baseline_arrow_back_24" />

</androidx.constraintlayout.widget.ConstraintLayout>